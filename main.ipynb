import os
import warnings
warnings.filterwarnings("ignore")

import tensorflow as tf
from tensorflow.keras.models import Sequential
from tensorflow.keras.layers import Conv2D, MaxPooling2D, Flatten, Dense, Dropout
from tensorflow.keras.preprocessing.image import ImageDataGenerator
from tensorflow.keras.optimizers import Adam

import matplotlib.pyplot as plt

DATASET_DIR = r"C:\Users\MAINAK\Desktop\execute\Potato Leaf Disease"

print("üìÅ Dataset Path:", DATASET_DIR)

if not os.path.exists(DATASET_DIR):
    raise FileNotFoundError("‚ùå Dataset folder not found at the given path")


folders = os.listdir(DATASET_DIR)
print("üìÇ Class folders found:")
for f in folders:
    print(" -", f)

print("‚úÖ Total classes:", len(folders))


IMG_HEIGHT = 224
IMG_WIDTH = 224
BATCH_SIZE = 32
EPOCHS = 10


datagen = ImageDataGenerator(
    rescale=1./255,
    validation_split=0.2
)

train_generator = datagen.flow_from_directory(
    DATASET_DIR,
    target_size=(IMG_HEIGHT, IMG_WIDTH),
    batch_size=BATCH_SIZE,
    class_mode="categorical",
    subset="training",
    shuffle=True
)

print("‚úÖ Training images loaded and ready for CNN")

val_generator = datagen.flow_from_directory(
    directory=DATASET_DIR,
    target_size=(IMG_HEIGHT, IMG_WIDTH),
    batch_size=BATCH_SIZE,
    class_mode="categorical",
    subset="validation",
    shuffle=True
)

print("‚úÖ Validation images imported successfully")
print("üñºÔ∏è  Validation samples:", val_generator.samples)
print("üöÄ Validation data ready for CNN\n")


model = Sequential([
    Conv2D(32, (3,3), activation="relu", input_shape=(IMG_HEIGHT, IMG_WIDTH, 3)),
    MaxPooling2D(2,2),

    Conv2D(64, (3,3), activation="relu"),
    MaxPooling2D(2,2),

    Conv2D(128, (3,3), activation="relu"),
    MaxPooling2D(2,2),

    Flatten(),
    Dense(128, activation="relu"),
    Dropout(0.5),
    Dense(train_generator.num_classes, activation="softmax")
])


from tensorflow.keras.optimizers import Adam

model.compile(
    optimizer=Adam(learning_rate=0.0001),
    loss="categorical_crossentropy",
    metrics=["accuracy"]
)

model.summary()

EPOCHS = 10

history = model.fit(
    train_generator,
    validation_data=val_generator,
    epochs=EPOCHS
)

print("\nüéØ CNN TRAINING COMPLETED SUCCESSFULLY\n")


print("üß™ Evaluating model on validation data...\n")

eval_loss, eval_accuracy = model.evaluate(val_generator)

print(f"üìâ Validation Loss     : {eval_loss:.4f}")
print(f"üìä Validation Accuracy : {eval_accuracy * 100:.2f}%\n")


train_accuracy = history.history["accuracy"][-1]
val_accuracy = history.history["val_accuracy"][-1]

print(f"üìä Final Training Accuracy   : {train_accuracy * 100:.2f}%")
print(f"üìä Final Validation Accuracy : {val_accuracy * 100:.2f}%\n")

MODEL_PATH = r"C:\Users\MAINAK\Desktop\execute\Potato Leaf Disease\potato_leaf_cnn.h5"
model.save(MODEL_PATH)
print(f"‚úÖ Model saved at {MODEL_PATH}")

import json 
LABEL_PATH = r"C:\Users\MAINAK\Desktop\execute\Potato Leaf Disease\class_labels.json"
class_labels = train_generator.class_indices
with open(LABEL_PATH, "w") as f:
    json.dump(class_labels, f)
print(f"‚úÖ Class labels saved at {LABEL_PATH}")

